<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>
	<input name="uploadFiles" type="file" multiple>
 	<input type="text" name="title" value="월" />
 	<input type="text" name="content" value="날씨맑음" />
 	<input type="text" name="writer" value="user2" />
	<button class="uploadBtn">Upload</button>
	<div class="uploadResult">
	</div>
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>	
	<script>
	$('.uploadBtn').click(f_upload);
    function f_upload( ) {
        var formData = new FormData();
        var inputFile = $("input[type='file']");
        var files = inputFile[0].files;
        for (var i = 0; i < files.length; i++) {
            console.log(files[i]);
            formData.append("uploadFiles", files[i]);   //formData에 넣기
         }
        //formData.append("bno", $("input[name='bno']").val());
        formData.append("title", $("input[name='title']").val());
        formData.append("content", $("input[name='content']").val());
        formData.append("writer", $("input[name='writer']").val());
        //upload ajax
        $.ajax({
            url: '/uploadAjax',
            processData: false,		//jQuery가 데이터를 처리하지 않도록 설정(파일 업로드 시 필요)
            contentType: false,  	// jQuery가 contentType을 설정하지 않도록 설정.(브라우저가 올바른 멀티파트 형식을 사용)
            data: formData,			// 서버로 전송할 데이터 (FormData 객체)
            type: 'POST',
            dataType:'json',  //서버로 부터 들어오는(받을) 데이터 타입
            success: function(result){console.log(result);                
                showUploadedImages(result);//나중에 화면 처리
            },
            error: function(jqXHR, textStatus, errorThrown){
                console.log(textStatus);
            }
        });  
    };  

    function showUploadedImages(arr){
        console.log(arr);
        var divArea = $(".uploadResult");
        var str = "";
        for(var i = 0; i < arr.length; i++){
            str += "<div>";
            str += "<img src='/display?fileName="+arr[i].thumbnailURL+"'>";
            str += "<button class='removeBtn' data-name='"+arr[i].imageURL +"'>REMOVE</button>"
            str += "</div>";
        }
        divArea.append(str);
    }

    $(".uploadResult").on("click", ".removeBtn", function(e){
        var target = $(this); //removeBtn
        var fileName = target.data("name"); //data-name
        var targetDiv = $(this).closest("div");
        console.log(fileName);
        $.post('/removeFile', {fileName: fileName}, function(result){
            console.log(result);
            if(result === true){
                targetDiv.remove();
            }
        } )

    });



</script>


</body>
</html>